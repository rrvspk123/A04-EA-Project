{% extends "base.html.j2" %}
{% block title %}
    {% if title %}
        {{ title }} - Microblog
    {% else %}
        {{ _('ezone.hk 即時科技生活新聞') }}
    {% endif %}
{% endblock %}
{% block addweb %}
    <form method="POST" action="{{ url_for('addweb') }}">
        {{ form.csrf_token }}
        <div>{{ form.author.label }} {{ form.author }}</div>
        <div>{{ form.link_p.label }} {{ form.link_p }}</div>
        <div>{{ form.title.label }} {{ form.title }}</div>
        <div>{{ form.middle_data.label }} {{ form.middle_data }}</div>
        <div>{{ form.submit }}</div>
    </form>
{% endblock %}
